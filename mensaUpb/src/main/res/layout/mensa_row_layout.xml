<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp">
    <ImageView
        android:id="@+id/marker_image"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_fettarm"/>
    <TextView
        android:id="@+id/menu_title"
        android:layout_toLeftOf="@id/marker_image"
        android:layout_width="fill_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/menu_prices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/marker_image"
        android:layout_below="@id/menu_title"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/menu_marker"
        android:layout_toLeftOf="@id/marker_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_prices"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/menu_allergene"
        android:layout_width="fill_parent"
        android:layout_toLeftOf="@id/marker_image"
        android:layout_below="@id/menu_marker"
        android:layout_height="wrap_content"
        android:textSize="11sp"/>

</RelativeLayout>